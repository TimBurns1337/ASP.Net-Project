@model ASP.Net_project.Models.Cooling

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Html.DisplayFor(model => model.CoolingName)</h1>

<div>
    
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
          Price
        </dt>
        <dd class = "col-sm-10">
           $@Html.DisplayFor(model => model.CoolingPrice)
        </dd>
        <dt class="col-sm-2">
            <img src="/images/@Html.DisplayFor(model => model.ImageLink)" width="350" height="350" />
        </dt>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CoolingId">Add</a> |
    <a asp-action="Index">Back to List</a>
</div>
