@model List<GamingPC>@{ string title = ViewBag.Action;                ViewBag.Title = title;}<html lang="en"><head>    <meta charset="utf-8">    <style>        img {            max-width: 100%;            max-height: 100%;            display: block; /* remove extra space below image */        }        .imageBox {            height: 300px;            width: 250px;            border: 5px solid black;            margin: auto;        }        .container {            max-width: 400px;            margin: auto;            position: relative;            background-color: whitesmoke;            padding: 5px;        }    </style>    <!--for some reason style is applying to the whole page--></head><body>    <div>        <h2>Pre-Built Pc's'</h2>    </div>    <br />       @foreach (var pcList in Model)    {            <div class="container">        <h2>@pcList.Name</h2>        <div class="imageBox">            <img src="~/images/@pcList.ImageLink" alt="@pcList.PcId">        </div>        <br>        <p>            @pcList.PcId        </p>        <p>            @pcList.Summary        </p>        <p>            @pcList.Price        </p>        <p>            Estimated Shipping Cost: $29.99        </p>        <p>            Shipped by Canada Post        </p>        <button type="button">Add to cart!</button><br><br>        <input type="checkbox" id="@pcList.PcId" name="@pcList.PcId" value="@pcList.PcId">        <label for="@pcList.PcId"> Compare</label><br>    </div>                    <br />    }    </body></html>