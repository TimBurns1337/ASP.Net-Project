@model ASP.Net_project.Models.MotherBoard

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Html.DisplayFor(model => model.MotherBoardName)</h1>

<div>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            $ @Html.DisplayFor(model => model.MotherBoardPrice)
