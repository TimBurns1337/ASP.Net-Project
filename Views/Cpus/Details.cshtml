@model ASP.Net_project.Models.Cpu

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Html.DisplayFor(model => model.CpuName)</h1>

<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
           $ @Html.DisplayFor(model => model.CpuPrice)
        </dd>
        
        <dd class="col-sm-10">
            <img src="/images/@Html.DisplayFor(model => model.ImageLink)" width="350" height="350" />
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CpuId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
