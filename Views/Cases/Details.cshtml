@model ASP.Net_project.Models.Case

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Html.DisplayFor(model => model.CaseName)</h1>

<div>

    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
           Price
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.CasePrice)
        </dd>
        <dt class="col-sm-2">
            <img src="/images/@Html.DisplayFor(model => model.ImageLink)" width="350" height="350" />
        </dt>
       
    </dl>
</div>
<div>
